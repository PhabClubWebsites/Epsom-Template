<style>
    .row .col-md-8 .col-xs-4 h4 span a,
    .row .col-md-4 h2 small span a {
        color: #56A644;
        padding-left: 10px;
    }
    
    @media (max-width: 500px) {
        .row .col-md-8 .col-xs-4 h4 span a {
            padding-left: 0px !important;
        }
    }
    
    
</style>

<div class="content">
    <h1>Dashboard</h1>    
    <hr></hr>
    <div class="row dashboard-row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <h2 style="margin: 0;">Pages <small>(<%= Page.all.size %>)</small></h2>
            <p class="dashboard-p">Publish and edit your content for the website</p>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">
            <div class="row">
                <div class="col-xs-4">
                    <h4>Home <small><span><%= link_to "View all..", home_list_path %></span></small></h4>
                </div>
                <div class="col-xs-8">
                    <p style="float: right;">
                        <%= link_to "Add a section", new_page_path(site_page:"home"), class:"btn btn-md   btn-phab" %>
                    </p>
                </div>
            </div>
            <hr></hr>
            <div class="row">
                <div class="col-xs-4">
                    <h4>About <small><span><%= link_to "View all..", about_list_path %></span></small></h4>
                </div>
                <div class="col-xs-8">
                    <p style="float: right;">
                        <%= link_to "Add a section", new_page_path(site_page:"about"), class:"btn btn-md   btn-phab" %>
                    </p>
                </div>
            </div>
            <hr></hr>
            <div class="row">
                <div class="col-xs-4">
                    <h4>Events <small><span><%= link_to "View all..", event_list_path %></span></small></h4>
                </div>
                <div class="col-xs-8">
                    <p style="float: right;"><%= link_to "Post event", new_page_path(site_page:"event"), class:"btn btn-md   btn-phab" %></p>
                </div>
            </div>
            <hr></hr>
            <div class="row">
                <div class="col-xs-4">
                    <h4>News <small><span><%= link_to "View all..", news_list_path %></span></small></h4>
                </div>
                <div class="col-xs-8">
                    <p style="float: right;"><%= link_to "Post news", new_page_path(site_page:"news"), class:"btn btn-md   btn-phab" %></p>
                </div>
            </div>
        </div>
    </div>
    <hr></hr>
    <div class="row dashboard-row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <h2 style="margin: 0;">Galleries <small>(<%= Gallery.all.size %>) <span><%= link_to "View all..", gallery_list_path %></span></small></h2>
            <p class="dashboard-p">Publish and edit your galleries</p>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">
            <p style="float: right;"><%= link_to "Create gallery", new_gallery_path, class:"btn btn-md   btn-phab" %></p>
        </div>
    </div>
    <hr></hr>
    <div class="row dashboard-row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <h2 style="margin: 0;">Volunteers <small>(<%= Page.all.where("site_page = ?", "volunteer").size %>) <span><%= link_to "View all..", volunteer_list_path %></span></small></h2>
            <p class="dashboard-p">Upload information about your volunteers</p>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">
            <p style="float: right;"><%= link_to "Add volunteer", new_page_path(site_page: "volunteer"), class:"btn btn-md   btn-phab" %></p>
        </div>
    </div>
    <hr></hr>
    <div class="row dashboard-row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <h2 style="margin: 0;">Admin <small>(<%= Admin.all.size %>) <span><%= link_to "View all..", admins_path %></span></small></h2>
            <p class="dashboard-p">Create new admin users</p>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">
            <p style="float: right;"><%= link_to "Create user", new_admin_registration_path, class:"btn btn-md   btn-phab" %></p>
        </div>
    </div>
    <hr></hr>
    <div class="row dashboard-row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <h2 style="margin: 0;">Website</h2>
            <p class="dashboard-p">Add/Update banners and your club logo for your website</p>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">
            <% if !club.blank? %>
                <p style="float: right;"><%= link_to "Update banners", website_banners_path(club_id: club.id), class:"btn btn-md btn-phab" %></p>
            <% else %>
                <p style="float: right;"><%= link_to "Update banners",new_club_path, class:"btn btn-md btn-phab" %></p>
            <% end %>
        </div>
    </div>
    <hr></hr>
    <div class="row dashboard-row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <h2 style="margin: 0;">Club</h2>
            <p class="dashboard-p">Set or edit your club details and customise the website template</p>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">
            <% if !club.blank? %>
                <p style="float: right;"><%= link_to "Edit club", edit_club_path(club), class:"btn btn-md btn-phab" %></p>
            <% else %>
                <p style="float: right;"><%= link_to "Create club", new_club_path, class:"btn btn-md btn-phab" %></p>
            <% end %>
        </div>
    </div>
</div>